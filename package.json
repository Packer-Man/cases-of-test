{
    "name": "cases-of-test",
    "description": "Run test locally with only flag but with the condition that it can detect there are tests flagged with only and it will fail on CI/CD environment",
    "version": "0.0.0",
    "license": "MIT",
    "main": "build/cjs/index.js",
    "module": "build/mjs/index.js",
    "types": "build/dts/index.d.ts",
    "react-native": "build/mjs/index.js",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "require": "./build/cjs/index.js",
            "import": "./build/mjs/index.js",
            "default": "./build/mjs/index.js",
            "types": "./build/dts/index.d.ts"
        }
    },
    "files": [
        "build"
    ],
    "keywords": [
        "vitest",
        "jest",
        "test wrapper",
        "test runner",
        "test cases",
        "only",
        "ci cd"
    ],
    "scripts": {
        "setup": "yarn install --frozen-lockfile",
        "lint": "eslint src/ test/ -f='stylish' --color",
        "format": "prettier --ignore-path .gitignore --write src/ test/",
        "format-check": "prettier --ignore-path .gitignore --check src/ test/",
        "build-mjs": "tsc -p tsconfig.mjs.json",
        "build-cjs": "tsc -p tsconfig.cjs.json",
        "build-dts": "tsc -p tsconfig.json",
        "build": "rm -rf build && yarn build-dts && yarn build-cjs && yarn build-mjs && node script/package.js",
        "test-local": "vitest --config config/vite/local.ts",
        "test-ci": "vitest --config config/vite/ci-cd.ts"
    },
    "bugs": "https://github.com/Packer-Man/test-controller/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/Packer-Man/test-controller"
    },
    "devDependencies": {
        "@types/node": "^18.11.0",
        "@typescript-eslint/eslint-plugin": "^5.40.0",
        "@typescript-eslint/parser": "^5.40.0",
        "eslint": "^8.25.0",
        "prettier": "^2.7.1",
        "typescript": "^4.8.4",
        "vitest": "^0.24.3"
    },
    "dependencies": {
        "boxen": "^7.0.0",
        "ci-info": "^3.5.0"
    }
}
